<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.Franfuu.view.PaginaPrincipalController">
    <children>
        <TableView fx:id="huellaTable" editable="true" layoutX="50.0" layoutY="50.0" prefHeight="200.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" />
                <TableColumn fx:id="actividadColumn" text="Nombre" />
                <TableColumn fx:id="valorColumn" text="Valor" />
                <TableColumn fx:id="unidadColumn" text="Unidad" />
                <TableColumn fx:id="fechaColumn" text="Fecha" />
                <TableColumn fx:id="actionColumn" text="Action" />
                <TableColumn fx:id="recomendacionColumn" text="Recomendaciones" />
            </columns>
        </TableView>
        <Button fx:id="addHabitoButton" layoutX="206.0" layoutY="269.0" text="Agregar Hábito" />
        <Button fx:id="addHuellaButton" layoutX="50.0" layoutY="270.0" text="Agregar Huella" />
        <Button fx:id="verHabitosButton" layoutX="50.0" layoutY="360.0" text="Ver Hábitos" />
        <Button fx:id="editUserButton" text="Edit User" layoutX="200.0" layoutY="300.0" />
        <Button fx:id="calcularImpactoButton" layoutX="50.0" layoutY="250.0" text="Ver Impacto de Carbono" onAction="#openImpactoCarbonoModal" />
    </children>
</AnchorPane>
